@page "/"

<h1 style="text-align:center; color:white; margin-top:60px; font-size:2.5rem;">
    Selamat Datang ke Game Klik 🎮
</h1>

<div style="display:flex; flex-direction:column; align-items:center; gap:20px; margin-top:40px;">
    <button style="background-color:#ff4e50; color:white; border:none; padding:15px 30px; font-size:1.2rem; border-radius:10px; cursor:pointer;"
            @onclick="GoToGame">
        Main Game
    </button>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; } = default!;
    void GoToGame() => Navigation.NavigateTo("/game");
}
